            <Param value="C#2|Ch1" type="button" name="Slot_6_1" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D-2|Ch1" type="button" name="Slot_7_1" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D#2|Ch1" type="button" name="Slot_8_1" maximum="127" minimum="0" aspect="0.5"/>

            <Param value="C-1|Ch1" type="button" name="Slot_1_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="C#1|Ch1" type="button" name="Slot_2_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D-1|Ch1" type="button" name="Slot_3_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D#1|Ch1" type="button" name="Slot_4_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="E-1|Ch1" type="button" name="Slot_5_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="F-1|Ch1" type="button" name="Slot_6_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="F#1|Ch1" type="button" name="Slot_7_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="G-1|Ch1" type="button" name="Slot_8_2" maximum="127" minimum="0" aspect="0.5"/>

            <Param value="E-0|Ch1" type="button" name="Slot_1_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="F-0|Ch1" type="button" name="Slot_2_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="F#0|Ch1" type="button" name="Slot_3_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="G-0|Ch1" type="button" name="Slot_4_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="G#0|Ch1" type="button" name="Slot_5_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="A-0|Ch1" type="button" name="Slot_6_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="A#0|Ch1" type="button" name="Slot_7_3" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="B-0|Ch1" type="button" name="Slot_8_3" maximum="127" minimum="0" aspect="0.5"/>

            <Param value="G#-1|Ch1" type="button" name="Slot_1_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="A--1|Ch1" type="button" name="Slot_2_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="A#-1|Ch1" type="button" name="Slot_3_4" maximum="127" minimum="0" aspect="0.5"/>
