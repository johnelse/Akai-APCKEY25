            <Param value="CC#55|Ch1" type="dial" name="Encoder #8"  maximum="127" minimum="0"/>
          </Group>

          <Group name="Transport" orientation="horizontal">
            <Param value="G-6|Ch1" type="button" name="Play/pause"     maximum="127" minimum="0"/>
            <Param value="A-6|Ch1" type="button" name="Rec"            maximum="127" minimum="0"/>
          </Group>

          <Group name="Shift" orientation="horizontal">
            <Param value="D-7|Ch1" type="button" name="Shift" maximum="127" minimum="0"/>
          </Group>
        </Column>
      </Row>

      <Row>
        <Column>
          <ShiftOff:Group name="TrackSelect" orientation="horizontal">
            <Param value="E-4|Ch1" type="button" name="Track_1" maximum="127" minimum="0"/>
            <Param value="F-4|Ch1" type="button" name="Track_2" maximum="127" minimum="0"/>
            <Param value="F#4|Ch1" type="button" name="Track_3" maximum="127" minimum="0"/>
