            <Param value="C-0|Ch1"  type="button" name="Slot_5_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="C#0|Ch1"  type="button" name="Slot_6_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D-0|Ch1"  type="button" name="Slot_7_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D#0|Ch1"  type="button" name="Slot_8_4" maximum="127" minimum="0" aspect="0.5"/>

            <Param value="C--1|Ch1" type="button" name="Slot_1_5" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="C#-1|Ch1" type="button" name="Slot_2_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D--1|Ch1" type="button" name="Slot_3_4" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="D#-1|Ch1" type="button" name="Slot_4_4" maximum="127" minimum="0" aspect="0.5"/>
