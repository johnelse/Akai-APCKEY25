            <Param value="D-6|Ch1" type="button" name="Trigger_5" maximum="127" minimum="0" aspect="0.5"/>
          </Group>

          <Group name="Stop">
            <Param value="A-5|Ch1" type="button" name="Stop all clips" maximum="127" minimum="0"/>
          </Group>
        </Column>

        <Column>
          <Group name="Encoders" orientation="horizontal" columns="4">
            <Param value="CC#48|Ch1" type="dial" name="Encoder #1"  maximum="127" minimum="0"/>
            <Param value="CC#49|Ch1" type="dial" name="Encoder #2"  maximum="127" minimum="0"/>
            <Param value="CC#50|Ch1" type="dial" name="Encoder #3"  maximum="127" minimum="0"/>
            <Param value="CC#51|Ch1" type="dial" name="Encoder #4"  maximum="127" minimum="0"/>

