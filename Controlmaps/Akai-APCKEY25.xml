<Device>
  <Name>Akai-APCKEY25</Name>
  <Author>nelsen</Author>
  <Description>Controlmap for Akai APC Key 25</Description>
  <States>
    <State name="ShiftOff" value="D-7|Ch1" type="toggle" hide_when_inactive="true" active="true"/>
