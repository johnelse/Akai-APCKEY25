  </States>
  <Parameters>
    <Page>
      <Row>
        <Column>
          <Group name="Slots" orientation="horizontal" columns="8">
            <Param value="G#1|Ch1" type="button" name="Slot_1_1" maximum="127" minimum="0" aspect="0.5"/>
