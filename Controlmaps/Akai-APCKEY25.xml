          </Group>
        </Column>

        <Column>
          <Group name="Triggers" orientation="vertical" column="1">
            <Param value="A#5|Ch1" type="button" name="Trigger_1" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="B-5|Ch1" type="button" name="Trigger_2" maximum="127" minimum="0" aspect="0.5"/>
            <Param value="C-6|Ch1" type="button" name="Trigger_3" maximum="127" minimum="0" aspect="0.5"/>
